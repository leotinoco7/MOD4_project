generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  nickname String @unique
  name     String
  password String
  image    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Game {
  id         String @id @default(uuid())
  name       String
  desc       String
  image      String
  year       Int
  trailerYt  String
  gameplayYt String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Genre {
  id   String @id @default(uuid())
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
